{
  "name": "Daily Air Report",
  "version": "1.0",
  "description": "A pluging to report daily air quality, and configure sms updates",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },
  "options_page": "options.html",
  "page_action": {
	"default_popup": "popup.html",
	"default_icon": {
		"16": "images/DailyAirReport16.png",
		"32": "images/DailyAirReport32.png",
        "48": "images/DailyAirReport48.png",
        "128": "images/DailyAirReport128.png"
	}
  },
  "icons": {
      "16": "images/DailyAirReport16.png",
      "32": "images/DailyAirReport32.png",
      "48": "images/DailyAirReport48.png",
      "128": "images/DailyAirReport128.png"
  },
  "manifest_version": 2
}
